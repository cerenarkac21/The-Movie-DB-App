<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"> <!-- required to use bind: -->

    <data>

        <variable
            name="movies"
            type="com.ltu.m7019e.themoviedb.database.Movies" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/movie_list_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".FirstFragment">

            <!--
            After creating the layout (movie_list_item), use (include) it.-->
            <include
                android:id="@+id/movie_1"
                layout="@layout/movie_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:movie="@{movies.list[0]}" />

            <include
                android:id="@+id/movie_2"
                layout="@layout/movie_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:movie="@{movies.list[1]}" />

            <include
                android:id="@+id/movie_3"
                layout="@layout/movie_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:movie="@{movies.list[2]}" />

            <include
                android:id="@+id/movie_4"
                layout="@layout/movie_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:movie="@{movies.list[3]}" />

            <include
                android:id="@+id/movie_5"
                layout="@layout/movie_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:movie="@{movies.list[4]}" />

        </LinearLayout>
    </ScrollView>
</layout>